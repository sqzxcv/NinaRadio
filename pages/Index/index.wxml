<!--pages/Index/index.wxml-->
<view class='backgroundView'>
    <view class="container">
        <view class="audioInfo">
            <text class="audioTitle">{{audioInfo.title}}</text>
            <view class="progress_bar">ã€€</view>
            <view class="control">
                <image class="previous_icon" src="/images/previous_icon.png" bindtap='playPreAudio'></image>
                <view class='play_icon' bindtap="play">
                    <image class="play_image" src='/images/play_icon.png' hidden="{{isplaying}}"></image>
                    <image class="pause_image" src='/images/pause_icon.png' hidden="{{!isplaying}}"></image>
                </view>
                <image class="next_icon" src="/images/next_icon.png" bindtap="playNextAudio"></image>
            </view>
            <!-- <button class="sharebtn" open-type="share"></button> -->
        </view>
    </view>
</view>