/* pages/Index/index.wxss */

.backgroundView {
    background-color: #eee;
    width: 100%;
    height: 1000px;
    /* margin: 0rpx */
    display: flex;
}

.container {
     /* height: 200rpx;  */
     max-height: 400rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: space-between; *//* padding: 200rpx 0; */
    box-sizing: border-box;
    margin-top: 100rpx;
    background-color: white;
}

.audioInfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
    top: 10rpx;
    height: 100%;
}

.progress_bar {
    background-color: #eee;
    /* margin-left: 10rpx;
    margin-right: 10rpx;  */
    height: 4px;
    width: 100%;
    margin-top: 40rpx;
}

.control {
    display: flex;
    flex-direction: row;
    margin-top: 100rpx;
    align-items: center;
    height: 100%;
}

.previous_icon {
    width: 60rpx;
    height: 40rpx;
}

.play_icon {
    width: 90rpx;
    height: 90rpx;
    margin-left: 100rpx;
    margin-right: 100rpx;
}

.play_image {
    width: 100%;
    height: 100%;
}

.pause_image {
    width: 100%;
    height: 100%;
}

.next_icon {
    width: 60rpx;
    height: 40rpx;
}
